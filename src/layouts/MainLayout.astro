---
// Supports weights 100-900
import "@fontsource-variable/onest";
import "@/assets/styles/global.css";

import Sidebar from "@/components/Sidebar.astro";
import VideoModal from "@/components/VideoModal.astro";

const { title = "Alexis Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/terminal1.png" />
    <title>{title}</title>

    <meta name="description" content="Portfolio personal" />

    <style>
      @view-transition {
        navigation: auto;
      }
    </style>
  </head>
  <body class="min-h-screen">
    <Sidebar />

    <main class="p-8 container lg:p-12 lg:ml-52">
      <slot />
      <VideoModal />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family:
      "Onest Variable",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif,
      sans-serif;
  }

  body::before {
    content: "";
    position: fixed;
    background: #0404042d url("images/fondo-index.jpg") top right no-repeat;
    background-size: cover;
    left: 0;
    right: 0;
    top: 0;
    height: 100vh;
    opacity: 0.1;
    z-index: -1;
  }
</style>
