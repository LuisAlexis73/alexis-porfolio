---
import ProjectCard from "@/components/ProjectCard.astro";
import type { MarkdownModule } from "@/interfaces/project.interface";
import MainLayout from "@/layouts/MainLayout.astro";

const modules = import.meta.glob("../content/projects/*.md", {
  eager: true,
}) as Record<string, MarkdownModule>;

const projects = Object.entries(modules).map(([path, mod]) => {
  const slug = path.split("/").pop()?.replace(".md", "");
  const meta = mod.frontmatter ?? mod.attributes ?? mod.metadata ?? {};

  return { slug, ...meta, Content: mod.default };
});
---

<MainLayout title="Proyectos | Alexis">
  <section class="max-w-5xl mx-auto">
    <h1 class="text-3xl lg:text-5xl font-bold mb-6 text-center">Proyectos</h1>

    <div class="grid md:grid-cols-2 gap-6">
      {projects.map((p) => <ProjectCard project={p} />)}
    </div>
  </section>
</MainLayout>
